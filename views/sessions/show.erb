<h1>Session Score Card<h1>
<h2><%= @session.date %> : <%= @session.game %></h2>

<table>
  <tr>
    <th>Players</th>
    <th>|</th>
    <th>Points</th>
    <th>|</th>
    <th>Result</th>
    <th>|</th>
    <th>Action</th>
  </tr>
  <% for result in @results %>
  <tr>
    <td><%= result['name'] %></td>
    <td>|</td>
    <td><%= result['points'] %></td>
    <td>|</td>
    <td><%= result['tag'] %></td>
    <td>|</td>
    <td><a href="/players_sessions/<%= result['id'] %>/edit">Edit Results</a></td>
  </tr>
  <% end %>
</table>

<hr>
<a href="/sessions/<%= @session.id %>/player/new">Add Player Results</a>
<hr>